<div class="container">
	<div class="row">
		<div class="col s10 offset-s1 center-align">
			<h5>You have <%= Team.count %> Teams in your league</h5>
		</div>
	</div>
	<!-- FORMAT THIS -->
	<% if flash[:notice] %>
	  <div class="flash notice row">
	    <p><%= flash[:notice] %></p>
	  </div>
	<% end %>
</div>

<div class="container">
	<ul class="collection">
	<% if @teams.any? %>
			<% @teams.each do |t| %>
			<li class="collection-item avatar">
	      <span class="title"><%= link_to t.name, team_path(w) %></span>
	      <a href="#!" class="secondary-content numHowls">3 howls</a>
			</li>
	<% end %>
		</ul>
	<% else %>
		<p>Sorry.  No wolves here!</p>
	<% end %>
	<div class="row">
		<%= link_to new_wolf_path do %>
			<i class="waves-effect right waves-light newPackBtn btn  red darken-3">New Pack Member</i>
		<% end %>
	</div>
</div>
